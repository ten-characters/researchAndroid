<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/mainActionBar</item>
        <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>
    </style>

    <style name="mainActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/accent_dark_indigo</item>
        <item name="android:title">@string/app_name</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/mainActionBarTitleText</item>
        <item name="fontPath">fonts/GothamMedium.ttf</item>
    </style>

    <style name="mainActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">@string/pallet_font</item>
    </style>


    <style name="AppTheme.Widget" />
    <style name="AppTheme.Widget.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background_gradient</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/pallet_font</item>
    </style>
    <style name="roundedButton" parent="AppTheme.Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_rounded_purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
    </style>
    <style name="circleButton" parent="android:Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_circle</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="AppTheme.Activity">
        <item name="android:background">@drawable/activity_background</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="fontPath">@string/pallet_font</item>
    </style>
    
    <style name="AppTheme.Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="circleStarRatingBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_custom</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="highHeaderText">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="lowHeaderText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="introHeaderText">
        <!-- Potentially a bad idea to put not universal values here, like center_horizontal,
            as the view types change-->
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">@dimen/intro_header_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/DroidSans_Bold.ttf</item>
    </style>

    <style name="introBodyText">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">@dimen/intro_body_text_size</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="fontPath">fonts/DroidSans.ttf</item>
    </style>

    <style name="cardText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="grateText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">20</item>
    </style>

   <!-- <style name="darkCheckBox">
        <item name="android:theme"></item>
    </style>-->


</resources>
