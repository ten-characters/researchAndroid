<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fav_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/favorite_price_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="$845.20"
            android:textSize="28sp"
            android:textColor="@color/money_green"/>

        <LinearLayout
            android:id="@+id/journey_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="5">
            <TextView
                android:id="@+id/card_pickup_location_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Jersey City, NJ"
                style="@style/cardText"/>
            <TextView
                android:id="@+id/card_pickup_time_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tomorrow, 12:30 PM"
                style="@style/cardText"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_past_shipment_arrow" />
            <TextView
                android:id="@+id/card_dropoff_location_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Philadelphia, PA"
                style="@style/cardText"/>
            <TextView
                android:id="@+id/card_dropoff_time_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="08/13, 8PM"
                style="@style/cardText"/>
        </LinearLayout>

        <TextView
            android:id="@+id/favorite_available_in_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Available in 8 hours"
            android:textSize="24sp"
            android:textColor="@color/accent_dark_purple"/>
    </LinearLayout>


</android.support.v7.widget.CardView>