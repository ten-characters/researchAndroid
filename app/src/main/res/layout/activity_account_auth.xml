<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ten_characters.researchAndroid.activities.AuthActivity"
    android:layout_weight="1"
    android:background="@android:color/black"
    >
    <ImageView
        android:id="@+id/pallet_logo_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"/>
    <EditText
        android:id="@+id/account_username"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />
    <EditText
        android:id="@+id/account_password"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/account_register_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".05"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="@string/action_apply_short"
            android:clickable="true"
            android:onClick="onButtonClick"/>
        <Button
            android:id="@+id/account_login_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".05"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="@string/action_sign_in_short"
            android:clickable="true"
            android:onClick="onButtonClick" />

    </LinearLayout>
</LinearLayout>
